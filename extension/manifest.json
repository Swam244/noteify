{
  "manifest_version": 3,
  "name": "Noteify: Intelligent Note Maker",
  "version": "1.0",
  "description": "Highlight text and send it to Notion or Notepad",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://noteify.duckdns.org/*"
  ],
  "icons": {
    "16": "image16.png",
    "48": "image48.png",
    "128": "image128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image16.png",
      "48": "image48.png",
      "128": "image128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
